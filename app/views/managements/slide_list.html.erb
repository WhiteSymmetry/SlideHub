<h3><%= t(:slide_list) %>&nbsp;&nbsp;<small><a href="/managements/dashboard"><%= t :back_to_dashboard %></a></small></h3>

<div class="panel panel-default">
    <!-- Table -->
    <table class="table table-striped table-bordered small">
        <thead>
            <tr>
              <th class="col-md-1"><%= sort_link(@q, :id) %></th>
              <th class="col-md-2"><%= sort_link(@q, :name) %></th>
              <th class="col-md-1"><%= sort_link(@q, :user_id) %></th>
              <th class="col-md-1"><%= sort_link(@q, :created_at) %></th>
              <th class="col-md-1"><%= sort_link(@q, :modified_at) %></th>
              <th class="col-md-1"><%= sort_link(@q, :convert_status) %></th>
              <th class="col-md-1"><%= sort_link(@q, :page_view) %></th>
              <th class="col-md-1"><%= sort_link(@q, :embedded_view) %></th>
              <th class="col-md-1"><%= sort_link(@q, :download_count) %></th>
              <th class="col-md-1"><%= t(:number_of_comments) %></th>
              <th class="col-md-1"><%= t('Command') %></th>
            </tr>
        </thead>
        <tbody>
            <% @slides.each do |slide| %>
            <tr>
                <td><a href="/slides/<%= slide.id %>"><%= slide.id %></a></td>
                <td><a href="/slides/<%= slide.id %>"><%= slide.name %></a>&nbsp;</td>
                <td><a href="/users/<%= slide.user_id %>"><%= slide.user_id %></a>&nbsp;</td>
                <td><%= slide.created_at %></td>
                <td><%= slide.modified_at %></td>
                <td><%= slide.convert_status %></td>
                <td><%= slide.page_view %></td>
                <td><%= slide.embedded_view %></td>
                <td><%= slide.download_count %></td>
                <td><%= slide.comments.count %></td>
                <td><a href="<%= slide.transcript_url %>" target="_blank"><i class="fa fa-file-text"></i></a>&nbsp;<a href="<%= slide.page_list_url %>" target="_blank"><i class="fa fa-jsfiddle"></i></a>&nbsp;<a href="/managements/download/<%= slide.id %>"><i class="fa fa-cloud-download"></i></a>&nbsp;<a href="/managements/slide_edit/<%= slide.id %>"><i class="fa fa-pencil"></i></a></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div>
    <%= will_paginate @slides, :renderer => BootstrapPagination::Rails %>
</div>
