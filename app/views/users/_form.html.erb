<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:username]) %>
  </div>
  <div class="control-group">
    <%= f.label :display_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :display_name, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:display_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:password]) %>
  </div>
  <div class="control-group">
    <%= f.label :admin, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :admin, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:admin]) %>
  </div>
  <div class="control-group">
    <%= f.label :disabled, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :disabled, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:disabled]) %>
  </div>
  <div class="control-group">
    <%= f.label :created, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :created, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:created]) %>
  </div>
  <div class="control-group">
    <%= f.label :modified, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :modified, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:modified]) %>
  </div>
  <div class="control-group">
    <%= f.label :biography, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :biography, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:biography]) %>
  </div>

  <div class="control-group">
    <%= f.label :avatar, class: 'control-label'  %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
    <%= error_span(@user[:avatar]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            users_path, :class => 'btn btn-default' %>

<% end %>
