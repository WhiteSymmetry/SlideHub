<% content_for :title, t(:search) %>
<div class="row">
  <div class="col-md-12">
    <%- model_class = Slide -%>
    <h3><%=t :search_slides %></h3>

    <%= render :partial => 'search_form' %>

    <%= render 'slides/thumbnail_template', column_class: 'col-md-3 col-sm-6', slides: @slides %>

    <br clear="all" />
    <%= will_paginate @slides, :renderer => BootstrapPagination::Rails %>
  </div>
</div>

<script type="text/javascript">
$1102(window).load(function () {
    $1102('.col-md-3').equalHeights();
});
</script>
